
<%-include('../partials/header')%>
<%-include('../partials/navbar')%>
<%-include('../partials/flash')%>
    <h1 class="text-center ">Products</h1>
    <div style="display: flex; gap: 30px; justify-content: center;">
        
    <% for(let item of products){ %>
        <div style="" class="d-flex flex-column justify-center card shadow">
        <img src="<%=item.img%>" alt="" style="height: 300px; width: 300px; border-radius: 8px;">
        <h3 class="text-center"><%=item.name%></h3>
        <p class="text-center"><%=item.desc%></p>
        <p class="text-center"><%=item.price%></p>
        <div  style="display: flex;justify-content: center; gap: 20px; margin: 20px auto; align-items: center; font-size: 20px;">
        <a href="/product/<%=item._id%>" class="btn btn-success d-inline-block">view product</a>
        
        <form action="/products/<%=item._id%>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">delete</button>
        </form>
       <%if(currentUser?.wishlist.includes('item._id')){%>
        <i class="fa-solid fa-heart" style="cursor: pointer;" data="<%=item._id%>" id="like-button"  ></i>
      <% }else{ %>
        <i class="fa-regular fa-heart" style="cursor: pointer;" data="<%=item._id%>" id="like-button"  ></i>
       <%} %>
    </div>
    </div>
   <%}%>
</div>
<script src="/js/common.js"></script>
   <%-include('../partials/footer')%>